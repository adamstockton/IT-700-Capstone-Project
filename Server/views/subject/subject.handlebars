{{#section 'head'}}
    <title>{{subject}} Courses</title>
{{/section}}

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Co-Learn Portal</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link navbar-top-element" href="/">Home</a></li>
                </ul>
            </div>
            <div class="pull-right">
                <ul class="navbar-nav">
                    <li class="nav-item"><span class="navbar-text"><span class="fas fa-user"></span> {{user_data.first_name}} {{user_data.last_name}} &nbsp;</span></li>
                    <li class="nav-item"><a class="nav-link navbar-top-element" href="/">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container ng-cloak" ng-app="subject-app" ng-controller="subject-controller">
    <br>
    <div class="row">
        <div class="col-12">
            <h1>Courses</h1>
            <br>
        </div>
    </div>
    <div class="row" ng-if="loading">
        <div class="col-12 text-center">
            <span class="fa-2x fas fa-spinner fa-spin"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12" ng-show="courses.length == 0 && !loading">
            <div class="alert alert-info">There are not any courses that are available within this subject</div>
        </div>
        <div class="col-12 col-md-3" ng-show="courses.length > 0" ng-repeat="course in courses">
            <div class="card" ng-click="openCourse(course.id)">
                <div class="card-body">
                    <h4>\{{course.name}}</h4>
                    <p><span class="fas fa-chalkboard-teacher"></span> \{{course.instructor}}</p>
                </div>
            </div>
        </div>
    </div>
</div>


{{#section 'scripts'}}
    <script>
        var _userData = {
            id: {{user_data.id}},
            first_name: '{{user_data.first_name}}',
            last_name: '{{user_data.last_name}}',
            type: '{{user_data.type}}'
        }
        var _subject = "{{subject}}";
    </script>
    <script src="/content/js/subject/subject.js"></script>
{{/section}}