{{#section 'head'}}
    <title>Dashboard</title>
{{/section}}

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Co-Learn Portal</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link navbar-top-element" href="/">Home</a></li>
                </ul>
            </div>
            <div class="pull-right">
                <ul class="navbar-nav">
                    <li class="nav-item"><span class="navbar-text"><span class="fas fa-user"></span> {{user_data.first_name}} {{user_data.last_name}} &nbsp;</span></li>
                    <li class="nav-item"><a class="nav-link navbar-top-element" href="/">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container ng-cloak" ng-app="dashboard-app" ng-controller="dashboard-controller">

    <h1>My Courses</h1>
    <br><br><br>
    <h1>Subjects</h1>

</div>


{{#section 'scripts'}}
    <script>
        var _userData = {
            id: {{user_data.id}},
            first_name: '{{user_data.first_name}}',
            last_name: '{{user_data.last_name}}',
            type: '{{user_data.type}}'
        }
    </script>
    <script src="/content/js/home/home.js"></script>
{{/section}}